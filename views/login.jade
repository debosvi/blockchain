extends layout

block content
  .container
    br
    br
    if error
      div.form-group.row
        div.col-md-2
        div.col-md-8.alert.alert-danger
          p Error: #{error}
    if message
      div.form-group.row
        div.col-md-2
        div.col-md-8.alert.alert-success
          p #{message}
  
    h1 #{__('Login')}
    br
    form(name="login", method="post")
      .form-group
        label #{__('User Name')}
        input(type="text",class="form-control", name="username")
      .form-group
        label #{__('Password')}
        input(type="text",class="form-control", name="password")
      button(type="submit", class="btn btn-default")
        | Login
      a(href="/")
        button(type="submit", class="btn btn-primary")
          | Cancel
      
